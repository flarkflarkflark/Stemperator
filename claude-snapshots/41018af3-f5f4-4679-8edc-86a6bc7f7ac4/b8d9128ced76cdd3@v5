name: Build Audio Restoration Suite

on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]
  workflow_dispatch:

jobs:
  build-linux:
    name: Build on Linux
    runs-on: ubuntu-latest

    steps:
    - name: Checkout code
      uses: actions/checkout@v4
      with:
        submodules: recursive

    - name: Install dependencies
      run: |
        sudo apt-get update
        sudo apt-get install -y \
          build-essential \
          cmake \
          pkg-config \
          libasound2-dev \
          libjack-jackd2-dev \
          libcurl4-openssl-dev \
          libfreetype6-dev \
          libfontconfig1-dev \
          libx11-dev \
          libxcomposite-dev \
          libxcursor-dev \
          libxext-dev \
          libxinerama-dev \
          libxrandr-dev \
          libxrender-dev \
          libwebkit2gtk-4.1-dev \
          libglu1-mesa-dev \
          mesa-common-dev \
          libgtk-3-dev

    - name: Configure CMake
      run: cmake -B build -DCMAKE_BUILD_TYPE=Release

    - name: Build
      run: cmake --build build --config Release -j$(nproc)

    - name: List build artifacts (debug)
      run: |
        echo "=== Full build directory structure ==="
        ls -R build/ || true
        echo ""
        echo "=== Looking for VST3 and executables ==="
        find build -name "*.vst3" -o -type f -executable || true

    - name: Upload VST3 (Linux)
      uses: actions/upload-artifact@v4
      with:
        name: AudioRestoration-Linux-VST3
        path: build/AudioRestoration_artefacts/Release/VST3/

    - name: Upload Standalone (Linux)
      uses: actions/upload-artifact@v4
      with:
        name: AudioRestoration-Linux-Standalone
        path: build/AudioRestoration_artefacts/Release/Standalone/

  build-macos:
    name: Build on macOS
    runs-on: macos-latest

    steps:
    - name: Checkout code
      uses: actions/checkout@v4
      with:
        submodules: recursive

    - name: Configure CMake
      run: cmake -B build -DCMAKE_BUILD_TYPE=Release

    - name: Build
      run: cmake --build build --config Release -j$(sysctl -n hw.ncpu)

    - name: List build artifacts (debug)
      run: |
        echo "=== Full build directory structure ==="
        ls -R build/ || true
        echo ""
        echo "=== Looking for VST3 and app bundles ==="
        find build -name "*.vst3" -o -name "*.app" || true
        echo ""
        echo "=== AudioRestoration_artefacts directory ==="
        find build/AudioRestoration_artefacts -type f || true

    - name: Upload VST3 (macOS)
      uses: actions/upload-artifact@v4
      with:
        name: AudioRestoration-macOS-VST3
        path: |
          build/AudioRestoration_artefacts/VST3/
          build/AudioRestoration_artefacts/Release/VST3/
        if-no-files-found: warn

    - name: Upload Standalone (macOS)
      uses: actions/upload-artifact@v4
      with:
        name: AudioRestoration-macOS-Standalone
        path: |
          build/AudioRestoration_artefacts/Standalone/
          build/AudioRestoration_artefacts/Release/Standalone/
        if-no-files-found: warn

  build-windows:
    name: Build on Windows
    runs-on: windows-latest

    steps:
    - name: Checkout code
      uses: actions/checkout@v4
      with:
        submodules: recursive

    - name: Configure CMake
      run: cmake -B build -DCMAKE_BUILD_TYPE=Release

    - name: Build
      run: cmake --build build --config Release -j $env:NUMBER_OF_PROCESSORS

    - name: List build artifacts (debug)
      run: |
        echo "=== Full build directory structure ==="
        Get-ChildItem -Recurse build\ | Select-Object FullName
        echo ""
        echo "=== Looking for VST3 and executables ==="
        Get-ChildItem -Recurse build\ -Include *.vst3,*.exe | Select-Object FullName

    - name: Upload VST3 (Windows)
      uses: actions/upload-artifact@v4
      with:
        name: AudioRestoration-Windows-VST3
        path: build/AudioRestoration_artefacts/Release/VST3/

    - name: Upload Standalone (Windows)
      uses: actions/upload-artifact@v4
      with:
        name: AudioRestoration-Windows-Standalone
        path: build/AudioRestoration_artefacts/Release/Standalone/
